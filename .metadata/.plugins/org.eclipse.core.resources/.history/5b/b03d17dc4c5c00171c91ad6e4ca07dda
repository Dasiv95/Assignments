/*
 * This program is to calculate the number of words in a string
 */

package com.bell.assignment4;

public class _1_Words {

	public static void main(String[] args){
		// TODO Auto-generated method stub
		String s = "This is a  java class";
		System.out.println("Number of characters in string are : "+s.length());
		int count=0;
		for(int i=0;i<s.length();i++){
			if(Character.isWhitespace(s.charAt(i))){
				continue;
			}
			else
				count+=1;
		}
		System.out.println("Totsl number of words in given string are : "+count);
		
}
		

	}


